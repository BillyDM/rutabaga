#!/usr/bin/env python

from waflib.TaskGen import after_method, before_method, feature

top = '..'

def build(bld):
    p = bld.program(
        source='test.c',
        use='rutabaga',
        target='test')

    bld.program(
        source='txtest.c',
        use='rutabaga',
        target='txtest')

    if bld.env.LIB_JACK:
        bld.program(
            source='cabbage_patch.c',
            use=[
                'rutabaga',
                'JACK'],

            target='cabbage_patch')
